@model IList<DAS.Backoffice.Models.News.NewsModel>
@using (Html.BeginForm("News", "Home", FormMethod.Post, new { id = "open_news" })) {

<div>
       @* <div id="newsTitle" style="margin-left:20px"></div>*@
        <table style="text-align:left;vertical-align:text-top;padding-left:10px; padding-right:10px">
            
            

            
             @foreach (var news in Model)
             {
                  
           <tr>   <td style="float:left; text-align:left;"><h2>@Html.Raw(news.Name)</h2></td> </tr>
               <tr> <td style="float:left; text-align:left;">@Html.Raw(news.Text)</td> </tr>
             
     
       
                <tr> <td style="float:left; text-align:left;">@Html.SKFButtonPrimary(ButtonType.BUTTON, "Izmeni", new Dictionary<string, string>() { {"onclick", "editNews(" + news.NewsId+");"}})</td> 
                    @if (news.Archive==false){
               <td style="float:left; text-align:left;">@Html.SKFButtonPrimary(ButtonType.BUTTON, Html.PTPLabel("Home","lblDelete"), new Dictionary<string, string>() { { "id" , "deleteNews_" + news.NewsId }, {"onclick", "deleteNews(this, " +  +news.NewsId+ "); return false;"} })</td>
                    }
               
               </tr>

        
   
             }
           
            <tr>
           @if (Model.Count == 0)
           {
            <td>@Html.Raw(Html.PTPLabel("Home", "lblEmpty"))</td>
                
           }            
           </tr>
        </table>


  </div>
}
