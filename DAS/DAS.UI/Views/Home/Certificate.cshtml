@using SkfCore.Web.Mvc.Helpers;
@model System.Collections.Generic.IList<DAS.UI.Models.Home.CertModel>

<table style="border-top:1px dashed #e2e2e2;border-left:1px dashed #e2e2e2;border-right:1px dashed #e2e2e2;">
    <tbody>
        @{int i = 0;}

          <tr style="font-size:12px; color:#000;">
            
            
             <td style="border-bottom:1px dashed #e2e2e2;width:700px; font-size:12px;"><b>@Html.PTPLabel("Clients","lblStand"):</b></td>
              <td style="border-bottom:1px dashed #e2e2e2;width:700px; font-size:12px;"><b>@Html.PTPLabel("Clients","lblCertNr"):</b></td>
             <td style="border-bottom:1px dashed #e2e2e2;width:700px; font-size:12px;"><b>@Html.PTPLabel("Clients","lblStatus"):</b></td>
                </tr>
       @foreach (var certificate in Model) 
    {

        string st = "background-color:#ffffff; font-size:12px; height:20px";
        if (i % 2 == 0) {
            st = "background-color:#f9f9f9; font-size:12px; height:20px";
        }
           
          
        <tr style="@st">
        
        <td style="border-bottom:1px dashed #e2e2e2;width:700px;border-right: 1px solid #cdd0d4; font-size:10px;">@certificate.Standard</td>       
        <td style="border-bottom:1px dashed #e2e2e2;width:700px;border-right: 1px solid #cdd0d4; font-size:10px;">@certificate.CertName</td>
        <td style="border-bottom:1px dashed #e2e2e2;width:700px; font-size:10px;">@certificate.Status</td>  
      </tr>
        i++;
    }
    </tbody>
</table>


