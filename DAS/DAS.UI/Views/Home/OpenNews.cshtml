@model IList<DAS.UI.Models.News.NewsModel>
@using (Html.BeginForm("News", "Home", FormMethod.Post, new { id = "open_news" })) {

<div>
        <h1><div id="newsTitle" style="margin-left:20px"></div></h1>
        <table style="text-align:left;vertical-align:text-top;padding-left:10px; padding-right:10px">
            
            <tr>             

            
             @foreach (var news in Model)
             {
                  
              <td style="float:left; text-align:left;"><h2>@Html.Raw(news.Name)</h2></td>
              <td style="float:left; text-align:left;">@Html.Raw(news.Text)</td>
           
   
               }
 
           @if (Model.Count == 0 )
           {
            <td>@Html.Raw(Html.PTPLabel("Home","lblEmpty"))</td>
                
            }            
         </tr>    
        </table>
  </div>
}